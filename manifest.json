{
  "manifest_version": 3,
  "name": "Universal Unit Converter",
  "version": "1.0.0",
  "description": "Convert any unit to another with text selection popup and comprehensive unit support",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Unit Converter Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "data/conversion-data.js",
        "utils/unit-converter.js",
        "utils/conversion-detector.js",
        "utils/popup-manager.js",
        "utils/settings-manager.js",
        "content.js"
      ],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
