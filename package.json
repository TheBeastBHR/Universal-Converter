{
  "name": "universal-converter",
  "version": "1.3.0",
  "description": "Chrome Extension v3 for converting units and currencies with text selection popup",
  "main": "background.js",
  "scripts": {
    "test": "node tests/test-runner.js",
    "test:all": "node tests/run-all-tests.js",
    "test:verbose": "node tests/run-all-tests.js --verbose",
    "test:stop-on-failure": "node tests/run-all-tests.js --stop-on-failure",
    "test:browser": "echo \"Open tests/test.html in a browser after installing the extension\"",
    "test:headless": "node tests/test-headless.js",
    "build": "node utils/build.js",
    "build:clean": "node utils/build.js && echo \"Build completed - check the build/ folder\"",
    "zip": "node -e \"console.log('Use npm run build to create a proper ZIP package')\"",
    "lint": "echo \"No linting configured yet\"",
    "validate": "node tests/validate-extension.js"
  },
  "keywords": [
    "chrome-extension",
    "unit-converter",
    "measurement",
    "conversion",
    "text-selection",
    "popup"
  ],
  "author": "Ahmed Al-Halal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheBeastBHR/Unit-Converter.git"
  },
  "bugs": {
    "url": "https://github.com/TheBeastBHR/Unit-Converter/issues"
  },
  "homepage": "https://github.com/TheBeastBHR/Unit-Converter#readme",
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "cross-env": "^7.0.3"
  }
}
